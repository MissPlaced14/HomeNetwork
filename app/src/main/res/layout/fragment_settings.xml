<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/networkFrame"
    tools:context="com.example.rajatkumar.homenetwork.SettingsFragment">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <ImageView
            android:id="@+id/image_settings"
            android:layout_width="150sp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:src="@drawable/telus_logo" />

        <TextView
            android:id="@+id/tvSSID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/image_settings"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:text="SSID"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LLOpenWRT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvSSID"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvOpenWRT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="OpenWRT"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/switchSSID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:checked="true"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tvGuestSSID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/LLOpenWRT"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Guest SSID"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/LLGuest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvGuestSSID"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/tvGuestOpenWRT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:text="Guest OpenWRT"
                android:textSize="20sp"
                android:textStyle="italic" />

            <Switch
                android:id="@+id/switchGuestOpenWRT"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:checked="true"/>


        </LinearLayout>

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="51dp"
            android:layout_marginBottom="25dp"
            android:text="Cancel" />

        <Button
            android:id="@+id/buttonSave"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/button"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="41dp"
            android:text="Save Changes" />
    </RelativeLayout>

</FrameLayout>
